{
    "manifest_version": 3,
    "name": "Language Substituter",
    "version": "0.1.0",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>",
        "http://localhost:*/*",
        "https://localhost:*/*"
    ],
    "background": {
        "service_worker": "./src/background/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./src/content/content.js"],
            "type":"module"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["freqList.json"],
            "matches": ["<all_urls>"]            
        }
    ],
    "action": {
        "default_popup":"./src/popup/popup.html"
    }
}