{
    "manifest_version": 3,
    "name": "Language Substituter",
    "version": "0.1.0",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "type":"module",
            "css": ["styles.css"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["freqList.json"],
            "matches": ["<all_urls>"]            
        }
    ],
    "action": {
        "default_popup":"popup.html"
    }
}